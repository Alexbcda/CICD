{
    "compilerOptions": {
      "target": "ES2019",                        
      "module": "commonjs",  
      "outDir": "build",                     
      "strict": true,                             
      "esModuleInterop": true,                    
      "skipLibCheck": true,                       
      "forceConsistentCasingInFileNames": true,    
                       
      "resolveJsonModule": true,                   
      "baseUrl": "./",                             
      "paths": {
        "*": ["node_modules/*", "src/types/*"]
      }
    },
    "include": ["src/**/*", "src"],
    "exclude": [
      "node_modules"
    ]
  }
  